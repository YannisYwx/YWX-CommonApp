<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/px2pt_24">

    <TextView
        android:id="@+id/tvDeviceFunctionNotifyTips"
        style="@style/MainText.grey.12"
        android:layout_marginTop="@dimen/px2pt_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDeviceFunctionNotify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_round_card"
        android:nestedScrollingEnabled="false"
        android:layout_marginTop="@dimen/px2pt_24"
        app:layout_constraintTop_toBottomOf="@id/tvDeviceFunctionNotifyTips" />

    <TextView
        android:id="@+id/tvPhoneAppNotifyTips"
        style="@style/MainText.grey.12"
        android:text="@string/ani_device_notifications_subtitle"
        android:layout_marginTop="@dimen/px2pt_48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvDeviceFunctionNotify" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPhoneAppNotify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_round_card"
        android:descendantFocusability="blocksDescendants"
        android:layout_marginTop="@dimen/px2pt_8"
        app:layout_constraintTop_toBottomOf="@id/tvPhoneAppNotifyTips" />
</androidx.constraintlayout.widget.ConstraintLayout>