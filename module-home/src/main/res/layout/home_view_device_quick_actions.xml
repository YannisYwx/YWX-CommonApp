<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/px2pt_16"
    android:paddingBottom="@dimen/px2pt_16">

    <TextView
        android:id="@+id/tvDeviceName"
        style="@style/MainText.emphasis"
        android:text="@string/ani_device_quickactions_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivQA3"
        android:layout_width="@dimen/px2pt_40"
        android:layout_height="@dimen/px2pt_40"
        android:src="@mipmap/icon_moreaction_btn_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivQA2"
        android:layout_width="@dimen/px2pt_40"
        android:layout_height="@dimen/px2pt_40"
        android:layout_marginEnd="@dimen/px2pt_8"
        android:src="@mipmap/icon_silentmode_btn_on_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivQA3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivQA1"
        android:layout_width="@dimen/px2pt_40"
        android:layout_height="@dimen/px2pt_40"
        android:layout_marginEnd="@dimen/px2pt_8"
        android:src="@mipmap/btn_actions_find_off"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivQA2"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>