<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray">

    <com.ywx.common.widget.Slided2SelectedView
        android:id="@+id/ssvHDWMY"
        android:layout_width="987.84pt"
        android:layout_marginTop="@dimen/px2pt_40"
        android:layout_height="@dimen/px2pt_36"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.ywx.common.widget.Slided2SelectedView
        android:id="@+id/ssv"
        android:layout_width="288pt"
        android:layout_height="@dimen/px2pt_36"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn1"
        style="@style/BlueButton"
        android:layout_marginTop="@dimen/px2pt_20"
        android:text="1 to 2"
        app:layout_constraintEnd_toStartOf="@id/btn2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ssv" />

    <Button
        android:id="@+id/btn2"
        style="@style/BlueButton"
        android:layout_marginTop="@dimen/px2pt_20"
        android:text="2 to 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn1"
        app:layout_constraintTop_toBottomOf="@id/ssv" />
</androidx.constraintlayout.widget.ConstraintLayout>