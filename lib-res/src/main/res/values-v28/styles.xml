<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LargeButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_big_height</item>
        <item name="android:background">@drawable/common_btn_selector</item>
        <item name="android:textSize">@dimen/btnTextSize</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textColor">@color/common_btn_text_color</item>
    </style>

    <style name="LargeEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">98pt</item>
        <item name="android:maxLength">32</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:textFontWeight">700</item>
    </style>

    <style name="MainText.15" parent="MainText">
        <item name="android:textSize">@dimen/textSize_15</item>
        <item name="android:textFontWeight">600</item>
    </style>
</resources>