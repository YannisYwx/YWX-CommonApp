<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_light_blue_5r"
    android:paddingStart="@dimen/px2pt_12"
    android:paddingEnd="@dimen/px2pt_12">

    <ImageView
        android:id="@+id/ivMinus"
        android:layout_width="@dimen/px2pt_28"
        android:layout_height="@dimen/px2pt_28"
        android:layout_marginEnd="@dimen/margin_8"
        android:src="@mipmap/minus_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvCenter"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivPlus"
        android:layout_width="@dimen/px2pt_28"
        android:layout_height="@dimen/px2pt_28"
        android:layout_marginStart="@dimen/margin_8"
        android:src="@mipmap/plus_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvCenter"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/tvCenter"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="#204778FF"
        android:layout_marginBottom="@dimen/px2pt_6"
        android:layout_marginTop="@dimen/margin_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>