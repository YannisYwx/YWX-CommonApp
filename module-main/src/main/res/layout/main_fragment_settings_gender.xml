<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/LargeTitle"
        android:text="@string/ani_profile_gender_question_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/ivMale"
        android:layout_marginTop="470pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:background="@drawable/main_gender_male"
        android:layout_width="276pt"
        android:layout_height="386pt" />

    <ImageView
        android:id="@+id/ivFemale"
        android:layout_marginTop="470pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:background="@drawable/main_gender_female"
        android:layout_width="276pt"
        android:layout_height="386pt"/>

    <ImageView
        android:id="@+id/ivOther"
        android:layout_marginTop="470pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:background="@drawable/main_gender_other"
        android:layout_width="276pt"
        android:layout_height="386pt"/>

</androidx.constraintlayout.widget.ConstraintLayout>