<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/pager_padding"
    android:paddingEnd="@dimen/pager_padding">

    <TextView
        android:id="@+id/tvTitleCreatePassCode"
        style="@style/LargeTitle"
        android:layout_marginTop="138pt"
        android:text="@string/ani_account_passcode_create_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPasscodeTips"
        style="@style/MainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_line_space"
        android:text="@string/ani_account_passcode_create_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleCreatePassCode" />

    <TextView
        android:id="@+id/tvErrorTips"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/normalTextSize"
        android:text="@string/ani_account_passcode_alert_differ"
        android:textColor="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPassCodeVerify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etPassCode"
        style="@style/LargeEditText"
        android:layout_marginTop="455pt"
        android:background="@null"
        android:freezesText="true"
        android:hint="@string/ani_account_passcode_content_passcode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPasscodeTips" />

    <EditText
        android:id="@+id/etPassCodeVerify"
        style="@style/LargeEditText"
        android:layout_marginTop="@dimen/text_line_space"
        android:background="@null"
        android:freezesText="true"
        android:hint="@string/ani_account_passcode_content_passcode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPassCode" />


    <Button
        android:id="@+id/btnNext"
        style="@style/LargeButton"
        android:layout_marginBottom="@dimen/pager_margin_bottom_50"
        android:enabled="false"
        android:text="@string/ani_general_action_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>