<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/LargeTitle"
        android:text="@string/ani_profile_birth_question_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/llDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/etYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/_0000"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@color/textColor"
            android:textDirection="locale"
            android:textSize="98pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11.5pt"
            android:layout_marginEnd="46pt"
            android:text="y"
            android:textColor="@color/textColor"
            android:textSize="37pt" />

        <EditText
            android:id="@+id/etMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/_00"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="@color/textColor"
            android:textDirection="locale"
            android:textSize="98pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11.5pt"
            android:layout_marginEnd="46pt"
            android:text="m"
            android:textColor="@color/textColor"
            android:textSize="37pt" />

        <EditText
            android:id="@+id/etDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/_00"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="@color/textColor"
            android:textDirection="locale"
            android:textSize="98pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11.5pt"
            android:text="d"
            android:textColor="@color/textColor"
            android:textSize="37pt" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvWarning"
        style="@style/MainText.Warning"
        android:layout_marginTop="32pt"
        android:text="@string/ani_profile_alert"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llDate" />

</androidx.constraintlayout.widget.ConstraintLayout>